<div class="row">
<div class="col-md-5 col-md-offset-3">

<h2 class="text-center text-info">Log in</h2>
<ol>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <b><%= f.label :email,'Email' %></b><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"40",:maxlength=>"55",class: "form-control" %>
  </div>
</br>
  <div class="field">
    <b><%= f.label :password,'Password' %></b><br />
    <%= f.password_field :password, autocomplete: "off",:size=>"50",:maxlength=>"55",class: "form-control"%>
  </div>
</br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in",class: "btn btn-primary btn-md" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</ol>

</div>

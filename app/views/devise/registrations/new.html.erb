  </div>

</br>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:size=>"50",:maxlength=>"55",class: "form-control" %>
  </div>
</br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
